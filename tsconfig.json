{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": false,
        "target": "ES2015",
        "lib": ["ES2021"],
        "experimentalDecorators": true,
        "outDir": "lib",
        "declaration": true
    },
    "include": ["./src/**/*"]
}
